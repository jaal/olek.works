<style is:global>
  .lightbox-overlay {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.9);
    z-index: 9999;
    justify-content: center;
    align-items: center;
    cursor: zoom-out;
  }

  .lightbox-overlay.active {
    display: flex;
  }

  .lightbox-content {
    max-width: 95%;
    max-height: 95%;
    object-fit: contain;
  }

  .lightbox-close {
    position: absolute;
    top: 20px;
    right: 30px;
    font-size: 40px;
    color: white;
    cursor: pointer;
    background: none;
    border: none;
    font-weight: bold;
    z-index: 10000;
    transition: opacity 0.2s;
  }

  .lightbox-close:hover {
    opacity: 0.7;
  }

  .note-content a[href$='.png'] img,
  .note-content a[href$='.jpg'] img,
  .note-content a[href$='.jpeg'] img,
  .note-content a[href$='.gif'] img {
