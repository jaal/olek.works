<!-- Lightbox overlay -->
<div id="lightbox" class="lightbox-overlay">
  <button class="lightbox-close" aria-label="Close">&times;</button>
  <img src="" alt="" class="lightbox-content" />
</div>

<script>
  // Lightbox functionality
  const lightbox = document.getElementById('lightbox');
  const lightboxImg = lightbox?.querySelector('.lightbox-content');
  const closeBtn = lightbox?.querySelector('.lightbox-close');

  // Find all image links in note content
  const imageLinks = document.querySelectorAll('.note-content a[href$=".png"], .note-content a[href$=".jpg"], .note-content a[href$=".jpeg"], .note-content a[href$=".gif"]');

  imageLinks.forEach(link => {
    link.addEventListener('click', (e) => {
      e.preventDefault();
      const imgSrc = link.getAttribute('href');
      const imgAlt = link.querySelector('img')?.getAttribute('alt') || '';

      if (lightboxImg) {
        lightboxImg.src = imgSrc;
        lightboxImg.alt = imgAlt;
      }

      if (lightbox) {
        lightbox.classList.add('active');
      }
    });
  });

  // Close lightbox function
  function closeLightbox() {
    if (lightbox) {
      lightbox.classList.remove('active');
    }
  }

  // Close button click
  closeBtn?.addEventListener('click', closeLightbox);

  // Click on overlay (but not on image)
  lightbox?.addEventListener('click', (e) => {
    if (e.target === lightbox) {
      closeLightbox();
    }
  });

  // ESC key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && lightbox?.classList.contains('active')) {
      closeLightbox();
    }
  });
</script>
